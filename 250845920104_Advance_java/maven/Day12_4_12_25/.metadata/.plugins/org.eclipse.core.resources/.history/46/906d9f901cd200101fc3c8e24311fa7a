<!-- now here we have the auto wiring by using the ref keyword
 -->
 <bean id="add" class="com.demo.bean.Address">  <!-- using the constructor injection -->
<constructor-arg index="0" value="Phule Market"></constructor-arg>
<constructor-arg index="1" value="jalgaon"></constructor-arg>
<constructor-arg index="2" value="452112"></constructor-arg>
</bean>

<bean id="sk" class="com.demo.bean.skill">
<property name="sid" value="11"></property>
<property name="skname" value="chess playing"></property>
<property name="experi" value="5 "></property>
</bean>

<!-- now the faculty class setting the value by the setterinjection -->
<bean id="faculty" class="com.demo.bean.Faculty">
<property name="fid" value="45"></property>
<property name="fname" value="Nitin Deore"></property>
<property name="sk" ref="sk"></property>  <!-- now here using the ref -->
<property name="add" ref="sk"></property>  <!--  now here we are using the  -->

</bean>



</beans>