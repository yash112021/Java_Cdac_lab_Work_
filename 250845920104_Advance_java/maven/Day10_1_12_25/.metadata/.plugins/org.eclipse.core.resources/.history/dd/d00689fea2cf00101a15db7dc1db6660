  "-//Hibernate/Hibernate Configuration DTD//EN" 
  "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Version 8 MySQL hiberante-cfg.xml example for Hibernate 5 -->
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/spring?useSSL=false</property>
    <property name="connection.username">root</property>
    <property name="connection.password">root123</property>
    <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
    <property name="connection.pool_size">3</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
    <!-- This is required only if we use getCurrentSession -->
    <property name="hibernate.current_session_context_class">
          thread
</property>
    
    <!-- mapping class" / -->
 
     <mapping class="com.demo.beans.Project"/> 
    <mapping class="com.demo.beans.Employee"/>  
      
  </session-factory>
</hibernate-configuration>