	package com.demo.Servlet;
	
	import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.demo.beans.User;
import com.demo.service.LoginService;
import com.demo.service.LoginServiceImpl;
	
	
	
	@WebServlet({ "/validateUser", "/valuser*" })
	public class validateUser extends HttpServlet {
		private static final long serialVersionUID = 1L;
	
		
		protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	//		response.getWriter().append("Served at: ").append(request.getContextPath());
			response.setContentType("Text/Html");
			PrintWriter out =response.getWriter();
			
			String user=request.getParameter("username");
			String pass=request.getParameter("pass");
			// making the object of the 
			LoginService eserv=new LoginServiceImpl();
			// now it will return us the User
			User usr=eserv.findUser(user,pass);
			
			//<jsp:useBean id="p" class="com.demo.beans.Product"></jsp:useBean>
			//<jsp:setProperty name="p" property="user" value='<%=request.getParameter("username")%>'></jsp:setProperty>
		
			//now we will perform the validation on the user 
			if(usr!=null&& usr.getRole().equals("admin")) {
				out.println("Valid user ");
				// now here we will use the request dispatcher to handle the another
				RequestDispatcher rd= request.getRequestDispatcher("showproduct.jsp");
				rd.forward(request, response);
			}else {
				out.println("Valid user ");
			
			}
			
			
			out.println("The  servlet login is sending the data");
		}
		
	
	}
